<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.schedule.RincianJadwalActivity">

    <ImageView
        android:id="@+id/iv_btn_back_rincian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_rincian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_date_rincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_month_rincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Juni"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_year_rincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="2023"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_rincian_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="40dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_rincian">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/amoxicillin"/>

            <TextView
                android:id="@+id/tv_nama_obat_rincian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Amoxicillin"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/white"/>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_rincian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rincian"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_rincian_header"/>

    <TextView
        android:id="@+id/tv_waktu_rincian"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:text="07:00"
        android:textSize="16sp"
        android:paddingHorizontal="80dp"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:background="@drawable/img_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rincian"/>

    <TextView
        android:id="@+id/tv_waktu_minum_rincian"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:text="Sebelum makan"
        android:textSize="16sp"
        android:paddingHorizontal="80dp"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:background="@drawable/img_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_waktu_rincian"/>

    <TextView
        android:id="@+id/tv_jumlah_tablet_rincian"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:text="10 tablet tersisa"
        android:textSize="16sp"
        android:paddingHorizontal="80dp"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:background="@drawable/img_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_waktu_minum_rincian"/>

    <TextView
        android:id="@+id/tv_jumlah_anjuran_rincian"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:text="1 tablet/dosis"
        android:textSize="16sp"
        android:paddingHorizontal="80dp"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:background="@drawable/img_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jumlah_tablet_rincian"/>

</androidx.constraintlayout.widget.ConstraintLayout>