<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tv_register_ayo_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_ayo_daftar"
        android:textSize="30sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_register_first_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nama depan"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_ayo_daftar"/>

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email Aktif"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_register_first_name"/>

    <EditText
        android:id="@+id/et_register_nomor_handphone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nomor Handphone"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_register_email"/>

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Kata Sandi"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_register_nomor_handphone"/>

    <EditText
        android:id="@+id/et_register_select_region"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Pilih Daerah Rungkut Asri"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_register_password"/>

    <CheckBox
        android:id="@+id/cb_register"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/cb_register_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textColor="#50000000"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_register_select_region"/>

    <TextView
        android:id="@+id/tv_register_syarat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_syarat"
        android:textSize="12sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintStart_toEndOf="@+id/cb_register"
        app:layout_constraintTop_toTopOf="@+id/cb_register"
        app:layout_constraintBottom_toBottomOf="@+id/cb_register"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/btn_register"
        android:textSize="24sp"
        android:background="@drawable/btn_rounded_corner_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_register"/>

</androidx.constraintlayout.widget.ConstraintLayout>