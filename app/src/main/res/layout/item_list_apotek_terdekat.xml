<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/primary"
    app:strokeWidth="1dp"
    app:cardCornerRadius="12dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        
        <ImageView
            android:id="@+id/iv_apotek_terdekat"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/apotek_agatha_farma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_nama_apotek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Nama Apotek"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_apotek_terdekat"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_alamat_apotek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Alamat Apotek"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_apotek"
            app:layout_constraintStart_toEndOf="@+id/iv_apotek_terdekat"/>

        <ImageView
            android:id="@+id/iv_btn_buka"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/img_50"
            app:layout_constraintStart_toEndOf="@+id/iv_apotek_terdekat"
            app:layout_constraintTop_toBottomOf="@+id/tv_alamat_apotek"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>