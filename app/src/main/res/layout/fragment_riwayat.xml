<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.history.RiwayatFragment">

    <FrameLayout
        android:id="@+id/fl_bg_cari_apoteker"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:text="@string/memilih_apoteker"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            android:lineHeight="28dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_outline_location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_outline_location"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_bg_cari_apoteker"/>

    <TextView
        android:id="@+id/tv_statement_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Pilih apotek terdekat atau apotek langganan anda "
        android:textColor="@color/primary"
        android:textSize="10sp"
        android:lineHeight="14dp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintStart_toEndOf="@+id/iv_outline_location"
        app:layout_constraintTop_toTopOf="@+id/iv_outline_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_outline_location"/>

    <ImageView
        android:id="@+id/iv_outline_cursor_mouse"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/img_outline_cursor_mouse"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_outline_location"/>

    <TextView
        android:id="@+id/tv_statement_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/pilih_konseling"
        android:textColor="@color/primary"
        android:textSize="10sp"
        android:lineHeight="14dp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintStart_toEndOf="@+id/iv_outline_cursor_mouse"
        app:layout_constraintTop_toTopOf="@+id/iv_outline_cursor_mouse"
        app:layout_constraintBottom_toBottomOf="@+id/iv_outline_cursor_mouse"/>

    <ImageView
        android:id="@+id/iv_outline_chat"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/img_outline_chat"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_outline_cursor_mouse"/>

    <TextView
        android:id="@+id/tv_statement_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/hub_apoteker"
        android:textColor="@color/primary"
        android:textSize="10sp"
        android:lineHeight="14dp"
        android:fontFamily="@font/montserrat_semi_bold"
        app:layout_constraintStart_toEndOf="@+id/iv_outline_chat"
        app:layout_constraintTop_toTopOf="@+id/iv_outline_chat"
        app:layout_constraintBottom_toBottomOf="@+id/iv_outline_chat"/>

    <ImageView
        android:id="@+id/iv_btn_pilih_apotek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_pilih_apotek"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_statement_3" />

</androidx.constraintlayout.widget.ConstraintLayout>